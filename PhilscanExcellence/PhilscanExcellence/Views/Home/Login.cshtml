
@{
    Layout = null;
}

<html lang="en" ng-app="login">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login - Philscan Excellence</title>

    @Styles.Render("~/Content/css")
</head>

<body ng-controller="loginController as vm">
    <div growl class="fading"></div>

    <div class="container"> 
        <br/><br /><br /><br/>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Philscan Excellence 1.0 BETA</h3>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Username" autofocus ng-model="vm.Username"/>
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Password" ng-model="vm.Password" />
                        </div>
                            <button class="btn btn-lg btn-success btn-block" ng-click="TryLogin(vm.Username, vm.Password)">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/Script")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-growl.min.js"></script>
    <script src="~/Scripts/select2.full.min.js"></script>
    <script src="~/App/Controller/Login.js"></script>

</body>
</html>
