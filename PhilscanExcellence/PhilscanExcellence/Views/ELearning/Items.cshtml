
@{
    ViewBag.Title = "Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="eLearningController as vm" ng-init="InitItem()">
    <table id="questionTable" class="table table-striped">
        <thead>
            <tr>
                <th>
                    <button class="btn btn-success" data-toggle="modal" data-target="#itemModal">
                        <i class="fa fa-plus"></i>
                    </button>
                </th>
                <th>Question</th>
                <th>Choice A</th>
                <th>Choice B</th>
                <th>Choice C</th>
                <th>Choice D</th>
                <th>Choice E</th>
                <th>Answer</th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="i in vm.Items">
                <td>
                    <button class="btn btn-primary" ng-click="AssignItem(i)" data-toggle="modal"
                            data-target="#itemModal"><i class="fa fa-pencil"></i></button>
                    <button class="btn btn-danger" ng-click="AssignDelete(i)" data-toggle="modal"
                            data-target="#deleteModal"><i class="fa fa-trash"></i></button>
                </td> 
                <td>{{i.Question}}</td>
                <td>{{i.ChoiceA}}</td>
                <td>{{i.ChoiceB}}</td>
                <td>{{i.ChoiceC}}</td>
                <td>{{i.ChoiceD}}</td>
                <td>{{i.ChoiceE}}</td>
                <th>{{i.Answer}}</th>
            </tr>
        </tbody>
    </table>

    <div id="deleteModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Are you sure you want to Delete?</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <button class="btn btn-danger">Yes</button>
                        <button class="btn btn-default">No</button>
                    </div>
                 </div>
            </div>
        </div>
    </div>

    <div id="itemModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Question Details</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>Question</label>
                        <textarea class="form-control" ng-model="vm.ItemModal.Question" rows="5"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Choice A</label>
                        <textarea class="form-control" ng-model="vm.ItemModal.ChoiceA" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Choice B</label>
                        <textarea class="form-control" ng-model="vm.ItemModal.ChoiceB" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Choice C</label>
                        <textarea class="form-control" ng-model="vm.ItemModal.ChoiceC" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Choice D</label>
                        <textarea class="form-control" ng-model="vm.ItemModal.ChoiceD" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Choice E</label>
                        <textarea class="form-control" ng-model="vm.ItemModal.ChoiceE" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Answer</label>
                        <select class="form-control" ng-model="vm.ItemModal.Answer" ng-options="item.value as item.label for item
                                in AnswerDropdown"></select>
                    </div>

                    <div class="form-group" ng-show="vm.FileUploaded">
                        <img src="~/FileUploads/{{vm.FileUploaded.Path}}" style="height:400px; width:565px;"/>
                    </div>

                    <div class="form-group" ng-show="vm.ItemModal.Attachment.Path">
                        <img src="~/FileUploads/{{vm.ItemModal.Attachment.Path}}" style="height:400px; width:565px;" />
                    </div>

                    <div class="form-group">
                        <input type="file" ngf-select="uploadFiles($files, $invalidFiles)" id="Files" multiple style="display:none" />
                        <button class="btn btn-default" ng-click="UploadClick()">Upload Photo</button>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" ng-click="SaveItem(vm.ItemModal)">Save</button>
                        <button class="btn btn-default pull-right" data-dismiss="modal">Cancel</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>